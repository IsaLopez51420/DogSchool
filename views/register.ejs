<%- include('navbar') %>
<div class="container-fluid register">
  <div class="row ">
    <div class="col reg">
      <h3 class="equipo text-center">Forma parte de nuestro equipo</h3>
      </div>
    </div>
    <br>
    
      <div class="row d-flex justify-content-center register2">
        <div class="col-md-8 col-lg-6">
          <form
            action="/trainer/register"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="form-group col-12" width="15%">
              <label for="name" class="form-label mt-2 mb-0">Nombre: </label>
              <input
                type="text"
                class="form-control"
                id="name"
                aria-describedby="name"
                name="name"
                required
              />
            </div>
            <div class="form-group col-12">
              <label for="last_name" class="form-label mt-2 mb-0"
                >Apellidos:
              </label>
              <input
                type="text"
                class="form-control"
                id="last_name"
                aria-describedby="last_name"
                name="last_name"
                required
              />
            </div>
            <div class="form-group col-12">
              <label for="phone_number" class="phone_number mt-2 mb-0"
                >Teléfono de contacto:</label
              >
              <input
                type="texto"
                class="form-control"
                id="phone_number"
                aria-describedby="phone_number"
                name="phone_number"
                required
              />
            </div>
            <div class="form-group col-12" class="form-label mt-2 mb-0"
                >Email address:</label
              >
              <input
                type="email"
                class="form-control"
                id="exampleInputEmail1"
                aria-describedby="emailHelp"
                name="email"
                required
              />

              <div id="emailHelp" class="form-text mt-0"></div>
            </div>
            <div class="form-group col-12">
              <label for="exampleInputPassword1" class="form-label mt-2 mb-0"
                >Introduce una contraseña:</label
              >
              <input
                type="password"
                class="form-control"
                id="exampleInputPassword1"
                name="password"
                required
              />
            </div>
            <div class="form-group col-12">
              <label
                for="exampleFormControlTextarea1"
                class="form-label mt-2 mb-0"
                >Tu descripción:</label
              >
              <textarea
                class="form-control"
                id="exampleFormControlTextarea1"
                name="description"
                rows="3"
                minlength="10"
                maxlength="255"
              ></textarea>
            </div>
            <div class="form-group col-12">
              <label for="formFile" class="form-label mt-2 mb-0"
                >Introduce tu imagen de perfil</label
              >
              <input
                class="form-control"
                type="file"
                id="formFile"
                name="img"
              />
            </div>
            <br>
            <button type="submit" class="btn btn-dark mb-3">
              Guardar datos
            </button>
          </form>
          
        </div>
        <h3 style="font-style: italic"><%- message %></h3>
        <br>
      </div>
    </div>
      <%- include('footer') %>
    
  
