<%- include('navbar') %>
<div class="container-fluid login">
  <div class="row">
    <div class="col">
      <h2 class="text-center m-5">Registra tu perro</h2>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-sm-8 col-md-6">
      <form
        action="/dog/registerDog/<%- trainer_id %>"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="form-group col-xs-12 col-sm-6" width="15%">
          <label for="name" class="form-label">Nombre</label>
          <input
            type="text"
            class="form-control"
            id="name"
            aria-describedby="name"
            name="dog_name"
            required
          />
        </div>
        <div class="form-group col-xs-12 col-sm-6">
          <label for="exampleFormControlTextarea1" class="form-label"
            >Descripci√≥n</label
          >
          <textarea
            class="form-control"
            id="exampleFormControlTextarea1"
            name="dog_info"
            rows="3"
            minlength="10"
            maxlength="255"
          ></textarea>
        </div>
        <div class="form-group col-xs-12 col-sm-6">
          <label for="formFile" class="form-label mt-2 mb-0"
            >Introduce una imagen del perro</label
          >
          <input class="form-control" type="file" id="formFile" name="img" />
        </div>
        <br />

        <button type="submit" class="btn btn-dark mb-3">Guardar datos</button>
      </form>
      <br />
    </div>
  </div>
</div>

<%- include('footer') %>
