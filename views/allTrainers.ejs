      <h2 class="title text-center mt-5">Nuestros entrenadores</h2>
    </div>
  </div>
  <div class="row">
    <% result.forEach(trainer => { %>

    <div class="col-lg-3 col-md-6 col-sm-12 d-flex justify-content-center my-5">
