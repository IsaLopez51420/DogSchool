<%- include('navbar') %>
<div class="container-fluid login">
  <div class="row">
    <div class="col">
      <br />
      <h3 class="text-center m-5">Inicia sesión</h3>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-md-8 col-lg-6">
      <form action="" method="post" enctype="application/x-www-form-urlencoded">
        <div class="form-group col-12">
          <label for="exampleInputEmail1" class="form-label mt-2 mb-0"
            >Email address</label
          >
          <input
            type="email"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
            required
          />
        </div>
        <div class="form-group col-12">
          <label for="exampleInputPassword1" class="form-label mt-2 mb-0"
            >Introduce una contraseña</label
          >
          <input
            type="password"
            class="form-control"
            id="exampleInputPassword1"
            name="password"
            required
          />
        </div>

        <br />

        <button type="submit" class="btn btn-dark mb-3">Login</button>
      </form>

      <br />
    </div>
    <h3 style="font-style: italic"><%- message %></h3>
    <br />
  </div>
</div>
<%- include('footer') %>
