<%- include('navbar') %>
<div class="container-fluid login">
  <div class="row">
    <div class="col">
      <br />
      <h3 class="text-center m-5">Registra tu perro</h3>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-md-8 col-lg-6">
      <form action="" method="post" enctype="multipart/form-data">
        <div class="form-group col-12" width="15%">
          <label for="name" class="form-label mt-2 mb-0">Nombre</label>
          <input
            type="text"
            class="form-control"
            id="name"
            aria-describedby="name"
            name="dog_name"
            required
          />
        </div>
        <div class="form-group col-12">
          <label for="exampleFormControlTextarea1" class="form-label mt-2 mb-0"
            >Descripci√≥n</label
          >
          <textarea
            class="form-control"
            id="exampleFormControlTextarea1"
            name="dog_info"
            rows="3"
            minlength="10"
            maxlength="255"
          ></textarea>
        </div>
        <div class="form-group col-12">
          <label for="formFile" class="form-label mt-2 mb-0"
            >Introduce una imagen del perro</label
          >
          <input class="form-control" type="file" id="formFile" name="img" />
        </div>
        <br />
        <select
          class="form-group col-12"
          aria-label="Default select example mt-2 mb-0"
          name="trainer_id"
        >
          <option disabled selected class="col-xs-12 col-sm-6">
            Selecciona el entrenador
          </option>

          <% result.forEach(trainer => { %>

          <option value="<%- trainer.trainer_id %>">
            <%- trainer.name %> <%- trainer.last_name %>
          </option>

          <% }) %>
        </select>
        <br />
        <br />

        <button type="submit" class="btn btn-dark mb-3">Guardar datos</button>
      </form>
      <br />
    </div>
  </div>
</div>

<%- include('footer') %>
